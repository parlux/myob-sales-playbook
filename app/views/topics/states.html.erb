<main>
  <div class="container">
    <div class="row">
    <% @topics.each do |topic| %>
      <div data-key="<%= topic.key %>" data-name="<%= topic.name %>" class="col-4 topic">
        <p><strong><%= topic.name %></strong></p>
        <p>
          <label for="">Curent state</label>
          <textarea data-current-state style="width: 100%;"><%= topic.current_state %></textarea>
        </p>
        <p>
          <label for="">Future state</label>
          <textarea data-future-state style="width: 100%;"><%= topic.future_state %></textarea>
        </p>
      </div>
    <% end %>
    </div>

    <button id="save-topic-states">SAVE</button>
  </div>
</main>

<%= render partial: "footer", locals: { prev_page_link: topics_path, next_page_link: topics_path } %>
